.userHeader {
	font-size:12px;
}
.userHeader figure {
	position:relative;
	float:left;
	width:110px;
}
.changeUserHead {
	background-color:#555;
	background-color:rgba(0,0,0,.5);
	width:100px;
	height:20px;
	position:absolute;
	top:80px;
	font-size:12px;
	text-align:center;
	color:#fff;
	line-height:1.6em;
}
.userHeader section {
	float:left;
	margin-top:5px;
	width:460px;
}
.userHeader aside {
	float:right;
}
/*
.userHeader h5 {
	height:25px;
}
*/
.userHeader em {
	float:left;
	padding-right:10px;
}
.userHeader h5 input {
	border:1px solid #84bd2f;
	height:20px;
	margin:-2px 5px 0;
	float:left;
	padding-left:5px;
}
.userHeader .btnNormalSilver {
	margin-top:-2px;
/* 	font-size:12px; */
}

/* 导航 */
.tabNav {
	border-bottom:1px solid #cfcfcf;
	height:27px;
}
.tabNav li {
	float:left;
	border:1px solid #e5e5e5;
	border-bottom-color:#cfcfcf;
	margin-left:5px;
	padding:2px 13px;
	color:#690;
	cursor:pointer;
}
.tabNav li:first-child{
	margin-left:10px;
}
.tabNav li.current {
	border:1px solid #cfcfcf;
	border-bottom-color:#fff;
	color:#555;
	font-weight:bold;
}
.userNavContent hgroup {
	width:auto;
}
.tabNav li a {
	color:#690;
}
.tabNav li.current a {
	color:#555;
}

/* 导航 > 关注的内容子导航 */
.tabNavSub {
	font-size:12px;
	margin:8px 0;
}
.tabNavSub {
	font-size:12px;
	margin:8px 0;
}
.tabNavSub li {
	float:left;
	margin-left:10px;
	text-align:center;
	width:83px;
	height:28px;
	cursor:pointer;
}
.tabNavSub li.current {
	background:url("<%=asset_path 'for_help/subNavArr.png' %>") no-repeat;
}

/* 话题列表 */
.userNavContent .topicList em {
	width:560px;
	font-weight:bold;
}
.userNavContent .topicList .nBtn {
	float:right;
}

/* 资料修改_基本资料设置 */
.setupProfile mark {
	background-color:transparent;
}
.setupNotify, .setupProfile {
	padding-left:10px;
	font-size:12px;
}
.setupProfile dt {
	margin-top:10px;
}
.setupProfile input {
	border:1px solid #bebebe;
	padding:5px;
	width:220px;
}
.setupProfile input.long {
	width:435px;
}
.setupProfile input:focus {
	border-color:#84bd2f;
}
/* 资料修改_邮件提醒设置 */
.setupNotify label {
	display:block;
	margin:10px 0;
	font-size:12px;
}

/* 向TA提问题 */
.askTo {
	background-color:#f4f4f4;
	border:1px solid #ebebeb;
	padding:4px;
}
/* 重写修改个人经历的textarea宽度 */
.userHeader .textarea {
	width:448px;
	padding:5px;
}
/* 重写向XX提问的textarea宽度 */
.askTo .textarea {
	width:617px;
	height:40px;
	margin-top:5px;
	padding:6px 5px;
}

#new_ask_title_ta {
	height:14px;
	padding:6px 5px;
}