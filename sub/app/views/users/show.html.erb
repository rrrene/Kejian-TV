<script type="text/javascript">
<% content_for :butt2 do %>
var old_content = jQuery("#contentMain").html();
jQuery('.queryOrderCss').live('click', function () {
    var queryOrder = jQuery(this).attr("rel");
    jQuery('#queryOrder').val(queryOrder);
    jQuery('#ulQueryOrder > li').removeClass();
    jQuery(this).parent().addClass('current');
    queryExec();
});
function queryExec(){
    var queryOrder = jQuery('#queryOrder').val();
    jQuery("#contentMain").html(old_content);
    autoLayout.pageAuto = true;
    autoLayout.pageNums = 0;
    autoLayout.loading = true;
    autoLayout.isHasNextPage = true;
    autoLayout.pageNum = 2;
    var linkUrl = "/coursewares?user_id=<%=@user.id%>",
        jsonUrl = "/coursewares_with_page?user_id=<%=@user.id%>";
    autoLayout.init({
        contentID: "contentMain",
        rightLoad: true,
        leftID: "",
        dataContent: {
            'queryOrder': queryOrder
        },
        rightID: ["rightLabel1"],
        linkUrl: linkUrl,
        loadingID: "imloading",

        callBack: function () {
        var showContent = "<%=@user.name%>还没有上传课件";

            jQuery("#contentMain").prepend('<div style="text-align: center; margin-right: 233px; padding-top: 100px; left: 0px; top: 0px;" class="f14" columns="0">' + showContent + '</div>');
        }
    });
    autoLayout.eachAction(jsonUrl);
    App.psvr_wendao_init();
}
im(function () {
    queryExec();
});
jQuery("#followBtn").live("click", function () {
    var boardUserId = '<%= @user.slug %>';
    var postUrl = "";
    var follow = jQuery(this).attr("follow");
    if (eval(follow) == true) {
        postUrl = uri("URI_FANS_UNFOLLOW_USER", boardUserId);
    } else {
        postUrl = uri("URI_FANS_ADD_FOLLOW_USER", boardUserId);
    }
    jQuery("#followBtn").bind("click", function () {
        return false;
    })
    var fansCount = jQuery("#user_profile_fans_count").find("em").text();
    if (eval(follow) == true) {
        im.window.confirm(jQuery("#followBtn"), "确认取消关注吗?", function () {
            jQuery.ajax({
                type: "POST",
                url: postUrl,
                dataType: "json",
                success: function (data) {
                    jQuery("#followBtn").removeClass().addClass('concern-ico').find("em").text("关注");
                    fansCount = eval(fansCount) - 1;
                    jQuery("#user_profile_fans_count").find("em").text(fansCount);
                    jQuery("#followBtn").attr("follow", false);
                    jQuery("#followBtn").unbind("click");
                }
            });
        });
        jQuery("#followBtn").unbind("click");
    } else {
        jQuery.ajax({
            type: "POST",
            url: postUrl,
            dataType: "json",
            success: function (data) {
                jQuery("#followBtn").removeClass().addClass('d-concerned-ico').find("em").text("已关注");
                fansCount = eval(fansCount) + 1;
                jQuery("#user_profile_fans_count").find("em").text(fansCount);
                jQuery("#followBtn").attr("follow", true);
                jQuery("#followBtn").unbind("click");
            }
        });
    }
});
jQuery("#zmaddfans").hover(

function () {
    jQuery(this).css({
        'width': '300px',
        'height': 'auto',
        'overflow': 'hidden',
        'opacity': '1'
    });
},

function () {
    jQuery(this).css({
        'width': '36px',
        'height': '36px',
        'overflow': 'hidden',
        'opacity': '0.2'
    });
})
jQuery("#fans_submit").live("click", function () {
    var jQuerythis = jQuery(this);
    var uid = jQuerythis.data("uid");
    var need = jQuery("#fans_count").val();
    if (uid == "") {
        im.window.alert("参数错误，请稍后再试！");
        return false;
    }
    if (need == "") {
        im.window.alert("请填写数量！");
        jQuery("#fans_count").focus();
        return false;
    }
    jQuery.ajax({
        url: "/vest/addFans",
        type: "POST",
        data: {
            uid: uid,
            need: need
        },
        success: function (data) {
            if (data == 1) {
                jQuery("#msg_tr").show("slow");
                jQuery("#sms_span_class").addClass("smstrue");
            } else {
                jQuery("#msg_tr").show("slow");
                jQuery("#sms_span_class").removeClass("smstrue");
            }
        }
    });
});
<% end %>
</script>


